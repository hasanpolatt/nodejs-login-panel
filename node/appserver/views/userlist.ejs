<h1>User List</h1>

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Username</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i=0; i<users.length; i++) {%>
            <tr>
                <th>#</th>
                <th><%=users[i].name%></th>
                <th><%=users[i].surname%></th>
                <th><%=users[i].email%></th>
                <th><%=users[i].username%></th>
                <th><button><a href="/login/userdelete/<%=userlist[i].username%>">delete</a></button></th>
            </tr>
            <%}%>
        </tbody>
    </table>
</div>